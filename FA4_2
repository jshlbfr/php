    <div class="container">
        <?php
        $names = array(
            "joshua albufera",
            "mica tambalong",
            "jessica ibarbia",
            "john paul besagas",
            "karl alexis revilla",
            "darren jake ambong",
            "alessandra cilot",
            "khaye gabas",
            "andrew potenciano",
            "john christian ramos",
            "james patrick rojas",
            "gabriel narag",
            "amrose radasa",
            "james uson",
            "mon alico",
            "ranielle dulay",
            "ivyn denoso",
            "jullian cabelin",
            "jamaica capistrano",
            "john andrei agui"
        );
        ?>
        <table>
            <tr>
                <th colspan="6"> List of Names: <br>
                    <?php echo implode(", ", $names); ?>
                </th>
            </tr>
            <tr>
                <th>Names</th>
                <th>Number of Characters</th>
                <th>Uppercase First Character</th>
                <th>Replace Vowels with @</th>
                <th>Check Position of Character 'a'</th>
                <th>Reverse Name</th>
            </tr>
            <?php foreach ($names as $name) :
                $characters = strlen($name);
                $upperCaseName = ucfirst($name);
                $replaceVowels = str_replace(['a', 'e', 'i', 'o', 'u'], '@', $name);
                $positionA = strpos($name, 'a');
                $reverseName = strrev($name);
            ?>
                <tr>
                    <td><?php echo $name; ?></td>
                    <td><?php echo $characters ?></td>
                    <td><?php echo $upperCaseName; ?></td>
                    <td><?php echo $replaceVowels; ?></td>
                    <td><?php echo $positionA !== false ? $positionA : 'âˆ…'; ?></td>
                    <td><?php echo $reverseName; ?></td>
                </tr>
            <?php endforeach; ?>
        </table>
    </div>
